
  <section class="main-content-wrapper">
            <section id="main-content">
          

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Documentation</h3>
                                <div class="actions pull-right">
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                            <div class="panel-body">

                              <p id="notice"><%= notice %></p>
                             
                              <table id="documentations" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                  <tr>
                                    <th>Format</th>
                                    <th>Title</th>
                                    <th>Version</th>
                                    <th>Show</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                  </tr>
                                </thead>

                                <tbody>
                                    <% @documentations.each do |documentation| %>
                                    <tr>
                                      <td><%= documentation.format%></td>
                                      <td><%= documentation.title %></td>
                                      <td><%= documentation.version %></td>
                                      <td width="5%"><%= link_to documentation_path(documentation), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :class => "btn btn-primary"}  do %><i class="fa fa-edit"></i> Show<% end %></td></td>
                                      <td width="5%"><%= link_to edit_documentation_path(documentation), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :class => "btn btn-default"}  do %><i class="fa fa-edit"></i> Edit<% end %></td>
                                      <td width="5%"><%= link_to documentation_path(documentation),data: {:confirm => 'Are you sure?'}, :method => :delete, :class => "btn btn-danger" do %><i class="fa fa-trash-o"></i> Delete<% end %></td>
                                    </tr> 

                                    <% end %>
                                </tbody>
                              </table>

                              <br>

                              <%= link_to 'New Documentation', new_documentation_path %>

          </div>
        </div>
      </div>
    </div>

  </section>
</section>


  <script type="text/javascript">
    $(document).ready(function() {
        $('#documentations').DataTable();
    } );
  </script>
  



