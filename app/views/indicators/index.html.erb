<section class="main-content-wrapper">
            <section id="main-content">
						<div class="row">
							<div class="col-md-3 col-sm-6">
								<div class="dashboard-tile detail tile-red">
									<div class="content">
										<h1 class="text-left timer" data-speed="2500" data-to="180" data-from="0">
											
										</h1>
										<p>Number of accidents with NO lost time this year</p>
									</div>
									<div class="icon">
										<i class="fa fa-warning"></i>
									</div>
								</div>
							</div>
							<div class="col-md-3 col-sm-6">
								<div class="dashboard-tile detail tile">
									<div class="content">
										<h1 class="text-left timer" data-speed="2500" data-to="56" data-from="0">
											
											
										</h1>
										<p>since the last NO lost time accident</p>
									</div>
									<div class="icon">
										<i class="fa  fa-smile-o"></i>
									</div>
								</div>
							</div>
							<div class="col-md-3 col-sm-6">
								<div class="dashboard-tile detail tile-blue">
									<div class="content">
										<h1 class="text-left timer" data-speed="2500" data-to="56" data-from="0">
											
										</h1>
										<p>Number of accidents with lost time this year</p>
									</div>
									<div class="icon">
										<i class="fa fa-warning"></i>
									</div>
								</div>
							</div>
							<div class="col-md-3 col-sm-6">
								<div class="dashboard-tile detail tile-purple">
									<div class="content">
										<h1 class="text-left timer" data-speed="2500" data-to="56" data-from="0">
											
										</h1>
										<p>since the last lost time accident</p>
									</div>
									<div class="icon">
										<i class="fa fa-smile-o"></i>
									</div>
								</div>
							</div>
					</div>


									<% @index=0 %>
									<% @indicators.each.with_index do |indicator, index| %>
										<% if index.odd? %>
							                    <div class="col-md-6">
							                        <div class="panel panel-default">
							                            <div class="panel-heading">
							                                <h5 class="panel-title">HR</h5>
							                                <div class="actions pull-right">
							                                	 <%= link_to edit_indicator_path(indicator), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  do %>Edit<% end %> | 
							                                    <%= link_to 'X', indicator_path(indicator),data: {:confirm => 'Are you sure?'}, :method => :delete, :class => "button" %>
							                                </div>
							                            </div>
							                            <div class="panel-body">
															<div id="graph" style="min-width: 100%; height: 100%; margin: 0 auto">
																<h2 class="title"></h2>
																	<%= high_chart(indicator.name.gsub(" ","_"), @charts[@index]) %>
																	<% @index += 1 %>
															</div>
														</div>
						                            </div>
						                        </div>
						                    </div>
						                <% else %>
						                	<div class="row" style='margin-bottom:20px'>
							                    <div class="col-md-6">
							                        <div class="panel panel-default">
							                            <div class="panel-heading">
							                                <h5 class="panel-title">HR</h5>
							                                <div class="actions pull-right">
							                                    	<%= link_to edit_indicator_path(indicator), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  do %>Edit<% end %> |
							                                    <%= link_to 'X', indicator_path(indicator),data: {:confirm => 'Are you sure?'}, :method => :delete, :class => "button"%>
							                                </div>
							                            </div>
							                            <div class="panel-body">
															<div id="graph" style="min-width: 100%; height: 100%; margin: 0 auto">
																<h2 class="title"></h2>
																	<%= high_chart(indicator.name.gsub(" ","_"), @charts[@index]) %>
																	<% @index += 1 %>
															</div>
														</div>
						                            </div>
						                        </div>
						                <% end %>
									<% end %>
									
            </section>
         </section>
         <!--main content end-->
